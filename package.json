{
  "name": "babblecord",
  "version": "1.0.0",
  "description": "This is simple chatroom application.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-css": "postcss dist/public/styles/tailwind.css -o dist/public/styles/style.css",
    "watch-css": "postcss public/styles/tailwind.css -o public/styles/style.css --watch",
    "dev": "NODE_ENV=development nodemon",
    "build": "npx tsc && cpy \"src/views/**/*\" \"dist/src/views\" && cpy \"public\" \"dist\" && cpy \"postcss.config.js\" \"dist/\" && cpy \"tailwind.config.js\" \"dist/\" && yarn build-css",
    "start": "node ./dist/src/index.js"
  },
  "author": "Ikem Ezechukwu",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.3.0",
    "autoprefixer": "^10.4.14",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "postcss": "^8.4.21",
    "postcss-middleware": "^1.1.4",
    "socket.io": "^4.6.1",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "@types/socket.io": "^3.0.2",
    "cpy-cli": "^4.2.0",
    "nodemon": "^2.0.21",
    "postcss-cli": "^10.1.0",
    "ts-node": "^10.9.1"
  }
}
