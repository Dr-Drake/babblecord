            <i class="fas fa-face-smile text-7xl lg:text-4xl text-white"></i>
            <h2 class="text-white text-6xl lg:text-3xl ml-5">BabbleCord</h2>
        </div>
        <button id="leave-chat-btn" class="bg-white lg:py-1 sm:py-3 lg:px-2 sm:px-4 text-chat-blue rounded-md lg:text-lg sm:text-4xl">Leave Room</button>
    </div>

    <!-- Chat Display -->
    <div class="flex flex-1">
        <div class="lg:basis-1/5 sm:basis-1/4 bg-chat-blue p-4 hidden lg:block">
            <div class="flex items-center text-white text-2xl">
                <i class="fas fa-users"></i>
                <h3 class="ml-3">Users: <span id="user-count">0</span></h3>
