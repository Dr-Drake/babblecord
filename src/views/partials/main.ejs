    </div>

    <!-- Message Input -->
    <form id="chat-form">
        <div class="bg-chat-dark-blue flex justify-between items-center p-5% lg:p-4 rounded-b-lg">
            <div class="flex items-center w-full">
                <input id="message-input" type="text" placeholder="Type your message here" class="w-full p-5 lg:p-3 border-gray-300 rounded focus:outline-none focus:ring focus:ring-blue-200 text-5xl lg:text-lg">
                <button class="ml-2 px-5 py-3 bg-bubble-blue text-chat-blue rounded-full">
                    <i class="fas fa-paper-plane text-chat-blue text-5xl lg:text-lg"></i>
                </button>
            </div>
        </div>
    </form>
</div>

